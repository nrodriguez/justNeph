.item_container
  .item_name
    = item.fixed_name
  .item_picture
    = link_to image_tag("#{item.image}", height: 150, width: 150), "#modal-#{item.unique_id}", {"data-toggle" => "modal"}
  .purchase_button
    %a.btn.btn-success{"data-toggle" => "modal", :href => "#modal-#{item.unique_id}", :role => "button"} Buy

.item_modal.modal.hide{:id => "modal-#{item.unique_id}"}
  .modal-header
    %a.close{"data-dismiss" => "modal"} Ã—
    %h3
      = item.fixed_name
  .modal-body
    .item_content
      .picture.normal
        = image_tag("#{item.image}")
      .item_information
        .description
          = item.description

          .category
            = item.category
        .price
          = number_to_currency(item.price)
  .modal-footer
    %a.btn.btn-inverse{"data-dismiss" => "modal"} Close
    %a.btn.btn-success{:href => item.url, :target => "_blank"}
      Purchase